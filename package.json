{
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bin": {
    "repo-check": "dist/cli.js"
  },
  "bugs": "https://github.com/Shuunen/repo-checker/issues",
  "config": {
    "logFile": "repo-check.log"
  },
  "description": "Repo cleaning made easy",
  "devDependencies": {
    "@rollup/plugin-commonjs": "16.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "10.0.0",
    "arg": "4.1.3",
    "ava": "3.13.0",
    "colorette": "1.2.1",
    "eslint": "7.13.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.2",
    "eslint-plugin-unicorn": "23.0.0",
    "esm": "3.2.25",
    "nyc": "15.1.0",
    "require-from-string": "2.0.2",
    "rollup": "2.33.3",
    "rollup-plugin-add-shebang": "0.3.1",
    "rollup-plugin-analyzer": "3.3.0",
    "shuutils": "4.1.0"
  },
  "files": [
    "dist",
    "templates"
  ],
  "homepage": "https://github.com/Shuunen/repo-checker",
  "keywords": [
    "repository",
    "check",
    "checker"
  ],
  "license": "GPL-3.0",
  "main": "dist/cli.js",
  "name": "repo-check",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/repo-checker.git"
  },
  "scripts": {
    "build": "rollup -c",
    "check": "node .",
    "ci": "npm run lint && npm run check && npm run test",
    "dev": "nodemon --quiet --ignore dist/ --exec npm run check",
    "lint": "eslint --fix --ignore-path .gitignore --ext .js .",
    "postversion": "git push && git push --tags && npm publish",
    "precheck": "npm run build",
    "prepare": "npm run build",
    "preversion": "npm run ci",
    "start": "npm run check",
    "test": "nyc ava",
    "test:watch": "nodemon --quiet --exec npm test",
    "update": "npx npm-check-updates -u"
  },
  "version": "1.11.0"
}
