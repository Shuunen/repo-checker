{
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bin": "dist/repo-check.min.cjs",
  "bugs": "https://github.com/Shuunen/repo-checker/issues",
  "config": {
    "logFile": "repo-check.log"
  },
  "description": "Repo cleaning made easy",
  "devDependencies": {
    "@types/fs-extra": "9",
    "@types/node": "16",
    "@types/require-from-string": "^1.2",
    "@typescript-eslint/eslint-plugin": "5.14",
    "@typescript-eslint/parser": "5.14",
    "arg": "5",
    "c8": "7",
    "esbuild": "^0.14",
    "esbuild-plugin-run": "^0.3",
    "eslint": "8.10",
    "eslint-plugin-html": "6",
    "eslint-plugin-unicorn": "41",
    "fs-extra": "10",
    "npm-run-all": "4",
    "require-from-string": "2",
    "shuutils": "^5.4",
    "tsm": "2.2",
    "typescript": "4.6",
    "uvu": "0.5",
    "watchlist": "0.3"
  },
  "files": [
    "dist/*.min.cjs",
    "templates"
  ],
  "homepage": "https://github.com/Shuunen/repo-checker",
  "keywords": [
    "repository",
    "check",
    "checker"
  ],
  "license": "GPL-3.0",
  "main": "dist/repo-check.min.cjs",
  "name": "repo-check",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/repo-checker.git"
  },
  "scripts": {
    "build": "node bin/build.mjs",
    "ci": "run-s build lint start test",
    "dev": "npm run build -- --watch",
    "lint": "tsc --noEmit && eslint --fix --ignore-path .gitignore --ext .js,.ts .",
    "postversion": "git push && git push --tags && npm run build && npm publish",
    "preversion": "npm run ci",
    "start": "node .",
    "test": "c8 uvu -r tsm tests",
    "test:watch": "watchlist src tests -eager -- npm test"
  },
  "version": "1.22.0"
}
