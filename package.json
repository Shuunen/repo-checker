{
  "$schema": "https://json.schemastore.org/package",
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bin": "dist/repo-check.min.cjs",
  "bugs": "https://github.com/Shuunen/repo-checker/issues",
  "config": {
    "logFile": "repo-check.log"
  },
  "dependencies": {
    "arg": "5",
    "shuutils": "7.2"
  },
  "description": "Repo cleaning made easy",
  "devDependencies": {
    "@types/node": "18",
    "@vitest/coverage-c8": "0.30",
    "dependency-cruiser": "latest",
    "esbuild": "0.17",
    "eslint": "8.38",
    "eslint-config-hardcore": "35",
    "eslint-plugin-unicorn": "46",
    "typescript": "5.0",
    "typescript-run": "0",
    "vitest": "0.30"
  },
  "files": [
    "dist/*.min.cjs",
    ".eslintrc.json",
    "templates"
  ],
  "homepage": "https://github.com/Shuunen/repo-checker",
  "keywords": [
    "repository",
    "check",
    "checker"
  ],
  "license": "GPL-3.0",
  "main": "dist/repo-check.min.cjs",
  "name": "repo-check",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/repo-checker.git"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --minify --outfile=dist/repo-check.min.cjs && echo build success",
    "check": "npm run build && npm run lint && npm start && npm test && echo check success",
    "dev": "ts-run src -w src",
    "lint": "tsc --noEmit && eslint --cache --fix --ext .js,.ts . && depcruise src --config && echo lint success",
    "postversion": "git push && git push --tags && npm run build && npm publish",
    "preversion": "npm run check",
    "start": "ts-run src && echo start success",
    "test": "npm run test:watch -- --run && echo test success",
    "test:watch": "vitest --coverage"
  },
  "version": "1.30.1"
}