{
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bin": "dist/cli.js",
  "bugs": "https://github.com/Shuunen/repo-checker/issues",
  "config": {
    "logFile": "repo-check.log"
  },
  "description": "Repo cleaning made easy",
  "devDependencies": {
    "@types/fs-extra": "*",
    "@types/mocha": "*",
    "@types/require-from-string": "1.2.0",
    "arg": "5.0.0",
    "colorette": "*",
    "fs-extra": "*",
    "npm-run-all": "*",
    "require-from-string": "2.0.2",
    "shuunen-stack": "0.10.1",
    "shuutils": "4.6.1"
  },
  "files": [
    "dist",
    "templates"
  ],
  "homepage": "https://github.com/Shuunen/repo-checker",
  "keywords": [
    "repository",
    "check",
    "checker"
  ],
  "license": "GPL-3.0",
  "main": "dist/cli.js",
  "name": "repo-check",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/repo-checker.git"
  },
  "scripts": {
    "build": "stack build src/cli.ts --platform node --minify",
    "check": "node .",
    "ci": "run-s build lint check test",
    "dev": "npm run build -- --dev",
    "lint": "stack lint",
    "postversion": "git push && git push --tags && npm run build && npm publish",
    "preversion": "npm run ci",
    "start": "npm run check",
    "test": "stack test",
    "test:watch": "stack test --watch",
    "update": "stack update"
  },
  "version": "1.18.0"
}
