{
  "$schema": "https://json.schemastore.org/package",
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bin": "dist/repo-check.min.cjs",
  "bugs": "https://github.com/Shuunen/repo-checker/issues",
  "config": {
    "logFile": "repo-check.log"
  },
  "dependencies": {
    "arg": "5",
    "shuutils": "7.2",
    "sort-json": "2"
  },
  "description": "Repo cleaning made easy",
  "devDependencies": {
    "@types/node": "18",
    "@types/sort-json": "2",
    "@vitest/coverage-c8": "0.30",
    "dependency-cruiser": "latest",
    "esbuild": "0.17",
    "eslint": "8.39",
    "eslint-config-hardcore": "35",
    "eslint-plugin-unicorn": "47",
    "typescript": "5.0",
    "typescript-run": "0",
    "vitest": "0.30",
    "watchlist": "0"
  },
  "files": [
    "dist/*.min.cjs",
    ".eslintrc.json",
    "templates"
  ],
  "homepage": "https://github.com/Shuunen/repo-checker",
  "keywords": [
    "repository",
    "check",
    "checker"
  ],
  "license": "GPL-3.0",
  "main": "dist/repo-check.min.cjs",
  "name": "repo-check",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/repo-checker.git"
  },
  "scripts": {
    "build": "pnpm build:app && unique-mark dist/repo-check.min.cjs && echo build success",
    "build:app": "esbuild src/index.ts --bundle --platform=node --minify --outfile=dist/repo-check.min.cjs",
    "build:start": "pnpm build:app && node .",
    "check": "pnpm start && pnpm lint && npm test && echo check success",
    "dev": "watchlist src -eager -- pnpm build:start",
    "lint": "tsc --noEmit && eslint --cache --fix --ext .js,.ts . && depcruise src --config && echo lint success",
    "postversion": "git push && git push --tags && pnpm build && npm publish",
    "preversion": "pnpm check",
    "start": "pnpm build:start && echo start success",
    "test": "pnpm test:watch --run && echo test success",
    "test:bench": "vitest bench",
    "test:update": "vitest --run --update && echo test update success",
    "test:watch": "vitest --coverage"
  },
  "version": "1.31.0"
}
