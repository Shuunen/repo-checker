{
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bin": "dist/index.js",
  "bugs": "https://github.com/Shuunen/repo-checker/issues",
  "config": {
    "logFile": "repo-check.log"
  },
  "description": "Repo cleaning made easy",
  "devDependencies": {
    "@types/fs-extra": "9",
    "@types/mocha": "9",
    "@types/require-from-string": "1.2.1",
    "@typescript-eslint/eslint-plugin": "5",
    "@typescript-eslint/parser": "5",
    "arg": "5",
    "esbuild": "^0.13",
    "eslint": "8",
    "eslint-plugin-html": "6",
    "eslint-plugin-mocha": "9",
    "eslint-plugin-promise": "5",
    "eslint-plugin-unicorn": "38",
    "fs-extra": "10",
    "mocha": "9",
    "npm-run-all": "4",
    "nyc": "15",
    "repo-check": "^1.20",
    "require-from-string": "2",
    "shuutils": "^4.9",
    "ts-node": "10",
    "typescript": "4"
  },
  "files": [
    "dist",
    "templates"
  ],
  "homepage": "https://github.com/Shuunen/repo-checker",
  "keywords": [
    "repository",
    "check",
    "checker"
  ],
  "license": "GPL-3.0",
  "main": "dist/index.js",
  "name": "repo-check",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/repo-checker.git"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --outdir=dist --platform=node --minify",
    "check": "repo-check",
    "ci": "run-s build lint check start test",
    "dev": "npm run build -- --watch",
    "lint": "eslint --fix --ignore-path .gitignore --ext .js,.ts .",
    "postversion": "git push && git push --tags && npm run build && npm publish",
    "preversion": "npm run ci",
    "start": "ts-node src/index.ts",
    "test": "nyc mocha"
  },
  "version": "1.20.1"
}
