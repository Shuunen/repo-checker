{
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bin": "dist/cli.js",
  "bugs": "https://github.com/Shuunen/repo-checker/issues",
  "config": {
    "logFile": "repo-check.log"
  },
  "description": "Repo cleaning made easy",
  "devDependencies": {
    "@types/fs-extra": "9.0.8",
    "@types/mocha": "8.2.1",
    "@types/require-from-string": "1.2.0",
    "arg": "5.0.0",
    "colorette": "1.2.2",
    "fs-extra": "9.1.0",
    "mocha": "8.3.1",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "require-from-string": "2.0.2",
    "shuutils": "4.3.0",
    "ts-node": "9.1.1",
    "tsup": "4.6.1",
    "xo": "0.38.2"
  },
  "files": [
    "dist",
    "templates"
  ],
  "homepage": "https://github.com/Shuunen/repo-checker",
  "keywords": [
    "repository",
    "check",
    "checker"
  ],
  "license": "GPL-3.0",
  "main": "dist/cli.js",
  "name": "repo-check",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/repo-checker.git"
  },
  "scripts": {
    "build": "tsup src/cli.ts",
    "check": "node .",
    "ci": "run-s build lint check test",
    "dev": "nodemon --quiet --ignore dist/ --ext .ts --exec run-s build check",
    "lint": "xo --fix",
    "postversion": "git push && git push --tags && npm run build && npm publish",
    "prebuild": "rm dist -rf",
    "preversion": "npm run ci",
    "start": "npm run check",
    "test": "nyc mocha",
    "test:watch": "nodemon --quiet --exec npm test --ext .ts",
    "update": "npx npm-check-updates -u"
  },
  "version": "1.14.8"
}
