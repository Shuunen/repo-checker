{
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bin": "dist/index.js",
  "bugs": "https://github.com/Shuunen/repo-checker/issues",
  "config": {
    "logFile": "repo-check.log"
  },
  "description": "Repo cleaning made easy",
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.0.0",
    "@types/require-from-string": "^1.2.1",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "arg": "^5.0.1",
    "eslint": "^8.2.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-unicorn": "^38.0.1",
    "fs-extra": "^10.0.0",
    "mocha": "^9.1.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "repo-check": "^1.19.0",
    "require-from-string": "^2.0.2",
    "shuunen-stack": "^0.14.0",
    "shuutils": "^4.9.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "files": [
    "dist",
    "templates"
  ],
  "homepage": "https://github.com/Shuunen/repo-checker",
  "keywords": [
    "repository",
    "check",
    "checker"
  ],
  "license": "GPL-3.0",
  "main": "dist/index.js",
  "name": "repo-check",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/repo-checker.git"
  },
  "scripts": {
    "build": "stack build --platform node --minify",
    "check": "repo-check",
    "ci": "run-s build lint check start test",
    "dev": "stack build --platform node --run --watch",
    "lint": "eslint --fix --ignore-path .gitignore --ext .js,.ts .",
    "postversion": "git push && git push --tags && npm run build && npm publish",
    "preversion": "npm run ci",
    "start": "ts-node src/index.ts",
    "test": "nyc mocha",
    "update": "stack update"
  },
  "version": "1.19.0"
}
