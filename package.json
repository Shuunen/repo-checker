{
  "$schema": "https://json.schemastore.org/package",
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bin": "dist/repo-check.min.cjs",
  "bugs": "https://github.com/Shuunen/repo-checker/issues",
  "config": {
    "logFile": "repo-check.log"
  },
  "dependencies": {
    "arg": "5",
    "shuutils": "7.1"
  },
  "description": "Repo cleaning made easy",
  "devDependencies": {
    "@types/node": "18",
    "c8": "7",
    "dependency-cruiser": "latest",
    "esbuild": "0.17",
    "eslint": "8.33",
    "eslint-config-hardcore": "26",
    "eslint-plugin-unicorn": "45",
    "tsm": "2.3",
    "typescript": "4.9",
    "typescript-run": "0",
    "uvu": "0.5",
    "watchlist": "0.3"
  },
  "files": [
    "dist/*.min.cjs",
    ".eslintrc.json",
    "templates"
  ],
  "homepage": "https://github.com/Shuunen/repo-checker",
  "keywords": [
    "repository",
    "check",
    "checker"
  ],
  "license": "GPL-3.0",
  "main": "dist/repo-check.min.cjs",
  "name": "repo-check",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/repo-checker.git"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --minify --outfile=dist/repo-check.min.cjs",
    "ci": "npm run build && npm run lint && npm start && npm test",
    "dev": "ts-run src -w src",
    "lint": "tsc --noEmit && eslint --cache --fix --ignore-path .gitignore --ext .js,.ts . && depcruise src --config",
    "postversion": "git push && git push --tags && npm run build && npm publish",
    "preversion": "npm run ci",
    "start": "ts-run src",
    "test": "c8 uvu -r tsm tests",
    "test:watch": "watchlist src tests -eager -- npm test"
  },
  "version": "1.29.0"
}
