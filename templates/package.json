{
  "author": "{{ user_name }} <{{ user_mail }}>",
  "bugs": "https://github.com/{{ user_id }}/{{ repo_id }}/issues",
  "description": "",
  "files": [
    "public",
    "src"
  ],
  "homepage": "https://github.com/{{ user_id }}/{{ repo_id }}",
  "keywords": [],
  "license": "{{ license }}",
  "name": "@{{ user_id_lowercase }}/{{ repo_id }}",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/{{ user_id }}/{{ repo_id }}.git"
  },
  "scripts": {
    "build": "esbuild src/index.ts --outdir=public --bundle --target=es2020 --define:global=window",
    "check": "repo-check",
    "ci": "npm run build && npm run lint && npm start && npm test",
    "dev": "npm run build -- --watch",
    "lint": "tsc --noEmit && eslint --fix --ignore-path .gitignore --ext .js,.ts . && npm run check",
    "postversion": "git push && git push --tags && npm run build && npm publish",
    "preversion": "npm run ci",
    "start": "node .",
    "test": "c8 uvu -r tsm tests",
    "test:watch": "watchlist src tests -eager -- npm test"
  },
  "version": "0.0.1"
}
