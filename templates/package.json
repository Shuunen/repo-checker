{
  "$schema": "https://json.schemastore.org/package",
  "author": "{{ userName }} <{{ userMail }}>",
  "bugs": "https://github.com/{{ userId }}/{{ repoId }}/issues",
  "description": "",
  "files": [
    "public",
    "src"
  ],
  "homepage": "https://github.com/{{ userId }}/{{ repoId }}",
  "keywords": [],
  "license": "{{ license }}",
  "name": "@{{ userIdLowercase }}/{{ repoId }}",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/{{ userId }}/{{ repoId }}.git"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --minify --outfile=dist/my-app.min.cjs",
    "check": "repo-check",
    "ci": "npm run build && npm run lint && npm start && npm test",
    "dev": "ts-run src -w src",
    "lint": "tsc --noEmit && eslint --fix --ignore-path .gitignore --ext .js,.ts . && npm run check",
    "postversion": "git push && git push --tags && npm run build && npm publish",
    "preversion": "npm run ci",
    "start": "ts-run src",
    "test": "c8 uvu -r tsm tests",
    "test:watch": "watchlist src tests -eager -- npm test"
  },
  "version": "0.0.1"
}
