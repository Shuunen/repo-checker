{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignore": [
      "node_modules/**",
      "src/mocks/tsProject/sub-folder/.repo-checker.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 300
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded",
      "bracketSpacing": true,
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "json": {
    "formatter": {
      "enabled": false
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "complexity": {
        "noVoid": "off",
        "useLiteralKeys": "off"
      },
      "correctness": {
        "useImportExtensions": "off"
      },
      "performance": {
        "useTopLevelRegex": "off"
      },
      "style": {
        "noImplicitBoolean": "off",
        "useBlockStatements": "off"
      },
      "suspicious": {
        "useAwait": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
